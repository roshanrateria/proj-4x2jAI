# =============================================================================
# üîß KALAKRITI - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env files with real credentials to public repositories

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
# SQLite database for development
DATABASE_URL="file:./dev.db"

# =============================================================================
# üîê AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth.js secret key - generate a random string
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Application URLs
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# ü§ñ AI SERVICES CONFIGURATION
# =============================================================================

# Google Gemini AI API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# Bhashini Translation Service (Government of India)
# Get from: https://bhashini.gov.in/en/ulca
BHASHINI_API_KEY="your-bhashini-api-key-here"
BHASHINI_USER_ID="your-bhashini-user-id-here"
NEXT_PUBLIC_BHASHINI_API_KEY="your-bhashini-api-key-here"
NEXT_PUBLIC_BHASHINI_USER_ID="your-bhashini-user-id-here"

# =============================================================================
# üó∫Ô∏è MAPPING & NAVIGATION SERVICES
# =============================================================================

# OSRM (Open Source Routing Machine) Server
# Public server or self-hosted
OSRM_SERVER_URL="https://router.project-osrm.org"

# =============================================================================
# üí≥ PAYMENT CONFIGURATION
# =============================================================================

# UPI Configuration (for Indian payments)
# Add your UPI payment gateway credentials here
UPI_MERCHANT_ID="your-upi-merchant-id"

# =============================================================================
# üìß EMAIL & NOTIFICATIONS
# =============================================================================

# Email service configuration (for order notifications)
# SMTP_HOST="your-smtp-host"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-email-password"

# =============================================================================
# üîß DEVELOPMENT CONFIGURATION
# =============================================================================

# Development flags
NODE_ENV="development"

# API Rate limiting
API_RATE_LIMIT="100"

# =============================================================================
# üìä ANALYTICS & MONITORING
# =============================================================================

# Google Analytics (optional)
# NEXT_PUBLIC_GA_ID="your-google-analytics-id"

# Sentry for error tracking (optional)
# SENTRY_DSN="your-sentry-dsn"

# =============================================================================
# üöÄ PRODUCTION CONFIGURATION (for deployment reference)
# =============================================================================

# Production URLs (example - update for your domain)
# NEXTAUTH_URL="https://your-domain.com"
# NEXT_PUBLIC_APP_URL="https://your-domain.com"

# =============================================================================
# üìù SETUP INSTRUCTIONS
# =============================================================================

# 1. Copy this file: cp .env.example .env.local
# 2. Get Gemini API key from Google AI Studio
# 3. Register for Bhashini API (Indian Government translation service)
# 4. Update all placeholder values with your actual credentials
# 5. Never commit .env files to version control
# 6. For production, use environment variables in your hosting platform

